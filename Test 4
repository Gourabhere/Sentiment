      >
        <div>
          <Tab defaultActiveKey="1">
            <Tab.TabPane tab="Work" key="1">
              <El className="Imn-p-12px len-px-sm-0 icgds-responsive-demo">
                <Card hover ref={cardHeaderRef} className="lan-shadow-1g 1mn-p-3 Imn-mb-5 lmn-bg-white lan-border lmn-border-strong lmn-col-12 1mn-mt-4px">
                  <Card body>
                    <div id="app-content" className="lmn-d-flex Imn-justify-content-center">
                      <div className="1mn-pr-24p 1mn-row lan-p-8px icgds-responsive-demo len-font-weight-bold">Team Name :</div>
                      {teams.length > 0 && (
                        <CustomizedContent teams={teams.map((item) => [item[0], item[1]])} onTeamSelect={(teamId) => setSelectedTeam(teamId)} />
                      )}
                    </div>
                  </Card>
                </Card>
              </El>
              <El className="1mn-row lmn-p-12px len-px-sm-8">
                <El key={'card_column_1'} className={colCls}>
                  <Card hover style={{ height: '300px' }} className="Imn-shadow-1g lmn-p-3 1mn-mb-5 Imn-bg-white len-border lan-border-strong icgds-responsive-demo">
                    <p header className="Imn-h3 Imn-ph-Mpx">
                      Success Rate
                    </p>
                    <Card body>
                      <div style={{ padding: '@px', marginTop: 'epx' }}>
                        <SuccessRate selectedTeam={selectedTeam} isStyleMode={false} themeConfig={{}} />
                      </div>
                    </Card>
                  </Card>
                </El>
                <El key={'card_column_2'} className={colCls}>
                  <Card hover style={{ height: '300px' }} className="Imn-shadow-lg lan-p-3 1mn-mb:5 1mn-bg-white Imn-border len-border-strong icgds-responsive-demo">
                    <p header className="1mn-h3 len-pb-24px">
                      Backlog Health
                    </p>
                    <Card body>
                      <div style={{ padding: 'epx', marginTop: '8px' }}>
                        <FetchData selectedTeam={selectedTeam} isStyleMode={false} themeConfig={{}} />
                      </div>
                    </Card>
                  </Card>
                </El>
                <El key={'card_column_3'} className={colCls}>
                  <Card hover style={{ height: '300px' }} className="Imn-shadow-Ig len-p-3 lmn-mb-5 1mm-bg-white Imn-border len-border-strong icgds-responsive-demo">
                    <p header className="1mn-h3 Imn-pb-24px ">
                      Churn Rate
                    </p>
                    <Card body>
                      <div style={{ padding: '0px', marginTop: '0px' }}>{/* <SentimentBarChart isStyleMode={false} themeconfig={{}} /> */}</div>
                    </Card>
                  </Card>
                </El>
                <El key={'card_column_4'} className={colCls}>
                  <Card hover style={{ height: '380px' }} className="1mn-shadow. 1g Imn-p-3 1mn-mb-5 lmn-bg-white len-border len-border-strong icgds-responsive-demo">
                    <p header className="Imn-h3 lmn-pb-2px">
                      Capacity Utilization {/* {console.log('CapacityUtil:', CapacityUtil)} */}
                    </p>
                    <Card body>
                      <div style={{ padding: '0px', marginTop: '@px' }}>
                        <CapacityUtil selectedTeam={selectedTeam} isStyleMode={false} themeConfig={{}} />
                      </div>
                    </Card>
                  </Card>
                </El>
              </El>
              <El className="1mn-row lmn-p-12px lmn-px-sm-0">
