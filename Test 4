                    <div className="1mn-px-12px lmn-p-12px">
                      <SentimentBarChart selectedTeam={selectedTeam} isStyleMode={false} themeConfig={{}} />
                    </div>
                  </Card>
                </El>
              </El>
              <El className={cardCls}>
                <Card hover ref={cardHeaderRef} style={{ height: '450px' }} className="1mn-shadow-lg lmn-p-3 1mn-mb-5 lmn-bg-white lmn-border lmn-border-strong lmn-col-12 1mn-mt-24px 1mn-page-card icgds-responsive-demo">
                  <p header className="1mn-h2 1mn-pb-24px">
                    Chart Section
                  </p>
                  <Card body>
                    <div style={{ padding: '20px', marginTop: '20px' }}>
                      <LineChart selectedTeam={selectedTeam} isStyleMode={false} themeConfig={{}} />
                    </div>
                  </Card>
                </Card>
              </El>
            </Tab.TabPane>
            <Tab.TabPane tab="Finance" key="2">
              Perspective: Finance
            </Tab.TabPane>
            <Tab.TabPane tab="Architecture" key="3">
              Perspective: Architecture
            </Tab.TabPane>
          </Tab>
        </div>
      </UIShell>
